<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.creationgroundmedia.twitternator.fragments.TweetAddFragment">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:id="@+id/etNewTweet"
        android:maxLength="140"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Tweet goes here" />

    <Button
        android:text="@string/add_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNewTweet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="29dp"
        android:id="@+id/btCancel" />

    <Button
        android:text="@string/add_dialog_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btCancel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:id="@+id/btOK" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNewTweet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tvCharsLeft"
        tools:text="140"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:paddingLeft="16dp" />

    <TextView
        android:text="Characters left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNewTweet"
        android:layout_toRightOf="@+id/tvCharsLeft"
        android:layout_toEndOf="@+id/tvCharsLeft"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:paddingLeft="4dp" />
</RelativeLayout>
